<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_back">

    <include layout="@layout/view_status_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/layout_title" />

        <com.zyx.widget.ScrollView1
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_total"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总资产"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8,888.06"
                            android:textSize="36sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投资理财+理财资金+余额"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/gray"/>


                    </LinearLayout>




                </RelativeLayout>

                <View
                    style="@style/border_line"
                    android:layout_marginTop="0.5dp"></View>





                <View
                    style="@style/border_line"
                    android:layout_marginTop="0.5dp"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">


                    <LinearLayout
                        android:id="@+id/ll_li"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/icon_yuan"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="30dp"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="爱理财    "
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <!--<TextView
                                android:id="@+id/tv_bill_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/black"
                                android:layout_marginTop="10dp"
                                android:gravity="center"/>-->
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        style="@style/v_line"
                        ></View>

                    <LinearLayout
                        android:id="@+id/ll_hua"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/icon_order"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="30dp"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="任意花    "
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <!--<TextView
                                android:id="@+id/tv_order_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"/>-->
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>







            </LinearLayout>


        </com.zyx.widget.ScrollView1>
    </LinearLayout>

    <include layout="@layout/view_navigation_bar" />
</LinearLayout>
