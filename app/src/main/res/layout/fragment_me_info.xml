<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_status_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_title_top" >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bt_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/side_me_info"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/register_zh"
                android:textColor="@drawable/bt_registered"
                android:textSize="24dp"
                android:visibility="gone"/>
        </RelativeLayout>

      <LinearLayout
          android:id="@+id/ll_account"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="8dp"
          android:background="@drawable/bt_normal">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_marginLeft="24dp">


              <ImageView
                  android:id="@+id/iv_left1"
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:layout_centerVertical="true"
                  android:src="@mipmap/account"
                  />

              <TextView
                  android:layout_toRightOf="@+id/iv_left1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="账户详情"
                  android:textSize="16sp"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="24dp"
                  android:textColor="@color/black"/>
              
              
              <ImageView
                  android:layout_width="12dp"
                  android:layout_height="12dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:src="@drawable/bt_go_po"
                  android:layout_marginRight="16dp"/>

          </RelativeLayout>

      </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray2"/>

        <LinearLayout
            android:id="@+id/ll_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bt_normal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp">


                <ImageView
                    android:id="@+id/iv_left2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/erweima"/>

                <TextView
                    android:layout_toRightOf="@+id/iv_left2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的二维码"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bt_go_po"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>

        </LinearLayout>


        <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/text_gray2"/>



        <LinearLayout
            android:id="@+id/ll_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bt_normal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp">


                <ImageView
                    android:id="@+id/iv_left3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/shezhi"/>

                <TextView
                    android:layout_toRightOf="@+id/iv_left3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bt_go_po"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/text_gray2"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bt_normal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp">


                <ImageView
                    android:id="@+id/iv_left4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/huiyuan"/>

                <TextView
                    android:layout_toRightOf="@+id/iv_left4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="会员特权"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bt_go_po"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray2"/>



        <LinearLayout
            android:id="@+id/ll_relate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bt_normal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp">


                <ImageView
                    android:id="@+id/iv_left5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/guanyu"/>

                <TextView
                    android:layout_toRightOf="@+id/iv_left5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bt_go_po"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_login_out"
            style="@style/btn_layout"
            android:layout_marginTop="32dp"
            android:text="@string/login_out_zh" />

    </LinearLayout>

    <include layout="@layout/view_navigation_bar" />
</LinearLayout>
