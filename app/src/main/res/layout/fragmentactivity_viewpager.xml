<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_status_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <com.zyx.widget.ViewPagerIndicator
            android:id="@+id/myViewPagerIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.zyx.widget.ViewPagerIndicator>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></android.support.v4.view.ViewPager>



    </LinearLayout>

    <include layout="@layout/view_navigation_bar" />
</LinearLayout>
