<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:src="@mipmap/zhong"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_proName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生活从新开始范德萨发大水大法师打发"
                android:textSize="@dimen/textSmall"
                android:maxLines="2"
                />

            <LinearLayout

                android:id="@+id/ll_processbar"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <ProgressBar
                    android:id="@+id/p_proBar"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="50"
                    android:secondaryProgress="70" />

                <TextView
                    android:id="@+id/tv_pecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已筹资￥"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_getMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000"
                    android:layout_marginLeft="8dp"
                    android:textSize="10sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资人数"
                    android:textSize="10sp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_getPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:layout_marginLeft="8dp"
                    android:textSize="10sp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
