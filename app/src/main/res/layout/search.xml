<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="2dp">

    <include layout="@layout/view_status_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="2dp"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bt_back_white" />
        <EditText

            android:paddingLeft="5dp"
            android:id="@+id/auto_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/sousuo"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_title_box"
            android:drawableLeft="@mipmap/search_bar_icon_normal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="搜索商品"
            android:textColorHint="#b3b3b3"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/iv_left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:singleLine="true"/>

        <ImageButton
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sousuo"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/search_clear"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sousuo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_sousuo_selector"
            android:layout_alignTop="@+id/search_clear"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="历史搜索"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textSize="18dp"
        android:textColor="@color/gray"/>


    <ListView
        android:id="@+id/auto_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true" >
    </ListView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/clear_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:layout_centerInParent="true"
            android:text="清空记录"
            android:textColor="@color/white"
            android:textSize="@dimen/textMedium"
            android:gravity="center"
            android:background="@drawable/btn_com_selectot"
            />

    </RelativeLayout>
    <include layout="@layout/view_status_bar" />
</LinearLayout>
