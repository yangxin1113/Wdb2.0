<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_status_bar" />

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zyx.widget.CustomScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_name_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="收款人：杨鑫  13429526599"/>


                </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/img_to_right_false"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <View style="@style/border_line_big"></View>

               <LinearLayout
                    android:id="@+id/ll_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_product"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.8"
                        android:src="@mipmap/img_card" />

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1.6"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="大学生分期贷款"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSmall"
                        android:textStyle="bold" />

                </LinearLayout>


                <View style="@style/border_line_big"></View>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="分期详情"
                    android:textSize="@dimen/textLarge"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="贷款金额:      ￥"
                        android:textSize="@dimen/textMedium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_loanMoney"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:text="1500"
                        android:textSize="@dimen/textSmall"
                        android:textColor="@color/black" />


                </LinearLayout>
                <View
                    style="@style/border_line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                   >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="0.3"
                        android:text="分期次数:"
                        android:textSize="@dimen/textMedium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_stage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="7"
                        android:textSize="@dimen/textMedium"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_marginRight="10dp"
                        android:text="次"
                        android:textSize="@dimen/textMedium"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.3"
                        android:text="每月还款:"
                        android:textSize="@dimen/textMedium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_repayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"

                        android:layout_marginLeft="4dp"
                        android:text="477.7"
                        android:textSize="@dimen/textMedium"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_marginRight="8dp"
                        android:text="￥"
                        android:textSize="@dimen/textMedium"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <View
                    style="@style/border_line_big"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/select_get_way_zh"
                        android:textSize="@dimen/textMedium"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/pay_q"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付宝收款"
                            android:textColor="@color/black"
                            android:layout_marginLeft="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐，方便，快捷"
                            android:textColor="@color/color_text1_zh"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_pay_z"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/check_img_false"
                        android:layout_marginRight="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zfb"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="32dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝账号:"/>

                    <EditText
                        android:id="@+id/ed_zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请输入如支付宝账号"
                        android:maxLength="11"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#cccccc"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:src="@mipmap/pay_w"
                        android:layout_marginRight="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="银行卡收款"
                            android:textColor="@color/black"
                            android:layout_marginLeft="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已绑定银行卡用户使用方式"
                            android:textColor="@color/color_text1_zh"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_pay_b"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/check_img_false"
                        android:layout_marginRight="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bank"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="32dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/youzheng"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/tv_bankcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="2131***********1361"
                        android:maxLength="11"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#cccccc"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"/>


                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/change"
                        android:layout_marginLeft="32dp"/>
                </LinearLayout>


            </LinearLayout>

        </com.zyx.widget.CustomScrollView>

        <Button
            android:id="@+id/bt_buy"
            style="@style/btn_layout"
            android:layout_alignParentBottom="true"
            android:text="确认购买"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>


</LinearLayout>
