                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:text="@string/loan_bottom_text"
                            android:textColor="@color/text_bottom_false"
                            android:textSize="12dp" />
                    </LinearLayout>





                    <!--<View
